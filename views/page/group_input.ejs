            //         type: 'post',
            //         url: '/savegroup',
            //         data: $(this).serialize(),
            //         success: function (data) {
            //             if(data.error){
            //                 alert(data.message);
            //             }else{
            //                 alert(data.message);
            //                 location.reload();
            //             }
            //         }
            //     });

            // }


            return false;
        });
    });
</script>